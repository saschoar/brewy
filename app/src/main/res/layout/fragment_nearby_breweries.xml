<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    tools:ignore="MissingPrefix">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/filterBackground"
            android:elevation="2dp"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/marginSmall"
            android:paddingRight="@dimen/marginSmall"
            android:visibility="gone">

            <TextView
                android:id="@+id/mapLabel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/marginSmall"
                android:paddingRight="@dimen/marginTiny"
                android:text="Map"
                android:textAllCaps="true"
                android:textSize="@dimen/textSizeSmall" />

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/listMapSwitch"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:checked="true"
                android:theme="@style/AlwaysColorizedSwitch" />

            <TextView
                android:id="@+id/listLabel"
                fontPath="@string/fontPathBold"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/margin"
                android:paddingLeft="@dimen/marginTiny"
                android:paddingRight="@dimen/marginSmall"
                android:paddingTop="@dimen/margin"
                android:text="List"
                android:textAllCaps="true"
                android:textSize="@dimen/textSizeSmall" />

            <TextView
                android:id="@+id/myLocation"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground"
                android:drawableLeft="@drawable/ic_my_location_24dp"
                android:drawablePadding="@dimen/marginTiny"
                android:gravity="center_vertical"
                android:lines="1"
                android:paddingLeft="@dimen/marginSmall"
                android:paddingRight="@dimen/marginSmall"
                android:text="My Location"
                android:textAllCaps="true"
                android:textSize="@dimen/textSizeSmall"
                android:visibility="gone"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/layers"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground"
                android:drawableLeft="@drawable/ic_layers_24dp"
                android:drawablePadding="@dimen/marginTiny"
                android:gravity="center_vertical"
                android:lines="1"
                android:paddingLeft="@dimen/marginSmall"
                android:paddingRight="@dimen/marginSmall"
                android:text="Streets"
                android:textAllCaps="true"
                android:textSize="@dimen/textSizeSmall"
                android:visibility="gone"
                tools:visibility="visible" />
        </LinearLayout>

        <com.google.android.gms.maps.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.saschahuth.brewy.ui.view.LocationItemView
            android:id="@+id/markerLocationView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/defaultBackground"
            android:elevation="1dp"
            android:visibility="gone"
            tools:visibility="visible" />
    </FrameLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/defaultBackground"
        android:clipToPadding="false"
        android:divider="@null"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbars="vertical"
        app:behavior_hideable="false"
        app:behavior_peekHeight="?attr/actionBarSize"
        app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
        tools:listitem="@layout/item_brewery" />

</android.support.design.widget.CoordinatorLayout>