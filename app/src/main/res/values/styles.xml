<resources>

    <style name="Theme.Brewy" parent="Base.Theme.Brewy" />

    <style name="Base.Theme.Brewy" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/BrewyTextAppearance</item>
        <item name="android:textAppearance">@style/BrewyTextAppearance</item>
    </style>

    <style name="BrewyTextAppearance" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/textSizeDefault</item>
        <item name="android:textColor">@color/textDefault</item>
    </style>

    <style name="AlwaysColorizedSwitch">
        <!-- Active thumb color & Active track color(30% transparency) -->
        <item name="colorControlActivated">?colorAccent</item>
        <!-- Inactive thumb color -->
        <item name="colorSwitchThumbNormal">?colorAccent</item>
        <!-- Inactive track color(30% transparency) -->
        <item name="android:colorForeground">?colorAccent</item>
    </style>

</resources>