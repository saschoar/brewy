<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/BrewyTextAppearance</item>
        <item name="android:textAppearance">@style/BrewyTextAppearance</item>
    </style>

    <style name="BrewyTextAppearance" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/textSizeDefault</item>
        <item name="android:textColor">@color/textDefault</item>
    </style>

</resources>